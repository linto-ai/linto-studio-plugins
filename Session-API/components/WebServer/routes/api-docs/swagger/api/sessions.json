{
    "/sessions": {
      "get": {
        "tags": [
          "sessions"
        ],
        "summary": "Get all sessions",
        "responses": {
          "200": {
            "description": "The list of sessions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SessionAnswer"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "sessions"
        ],
        "summary": "Create a new session",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SessionRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SessionAnswer"
                }
              }
            }
          }
        }
      }
    },
