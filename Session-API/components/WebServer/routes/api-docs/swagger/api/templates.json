{
  "/templates": {
    "get": {
      "tags": [
        "templates"
      ],
      "summary": "Get all templates",
      "parameters": [
        {
          "in": "query",
          "name": "limit",
          "description": "Maximum number of templates in the answer",
          "required": false,
          "schema": {
            "type": "integer"
          }
        },
        {
          "in": "query",
          "name": "offset",
          "description": "Offset from the start the number of templates",
          "required": false,
          "schema": {
            "type": "integer"
          }
        },
        {
          "in": "query",
          "name": "searchName",
          "description": "Name of the template to search",
          "required": false,
          "schema": {
            "type": "string"
          }
        },
        {
          "in": "query",
          "name": "organizationId",
          "description": "Search for templates belonging to this organization.",
          "required": false,
          "schema": {
            "type": "string"
          }
        },
        {
          "in": "query",
          "name": "visibility",
          "description": "Search for templates with a specific visibility.",
          "required": false,
          "schema": {
            "type": "string",
            "enum": [
              "private",
              "organization",
              "public"
            ]
          }
        },
        {
          "in": "query",
          "name": "autoStart",
          "description": "Search for templates with autoStart set to this value.",
          "required": false,
          "schema": {
            "type": "boolean"
          }
        },
        {
          "in": "query",
          "name": "autoEnd",
          "description": "Search for templates with autoEnd set to this value.",
          "required": false,
          "schema": {
            "type": "boolean"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "The list of templates",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/SessionTemplatePaginationAnswer"
                }
              }
            }
          }
        }
      }
    },
    "post": {
      "tags": [
        "templates"
      ],
      "summary": "Create a new template",
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/SessionTemplateRequest"
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SessionTemplateAnswer"
              }
            }
          }
        }
      }
    }
  },
  "/templates/{id}": {
    "get": {
      "tags": [
        "templates"
      ],
      "summary": "Get a template by ID",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "Template ID",
          "required": true,
          "schema": {
            "type": "integer"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "The template",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SessionTemplateAnswer"
              }
            }
          }
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    },
    "put": {
      "tags": [
        "templates"
      ],
      "summary": "Update a template",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "Template ID",
          "required": true,
          "schema": {
            "type": "integer"
          }
        }
      ],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/SessionTemplateRequest"
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SessionTemplateAnswer"
              }
            }
          }
        }
      }
    },
    "delete": {
      "tags": [
        "templates"
      ],
      "summary": "Delete a template by ID",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "Template ID",
          "required": true,
          "schema": {
            "type": "integer"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Template successfully deleted"
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    }
  }
}
