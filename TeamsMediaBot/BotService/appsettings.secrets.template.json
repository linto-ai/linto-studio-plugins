{
  // IMPORTANT: Copy this file to appsettings.secrets.json and fill in your actual values
  // The appsettings.secrets.json file is ignored by git to keep your secrets safe
  
  // Azure Active Directory Application Configuration
  "AZURE_TENANT_ID": "your-azure-tenant-id-here",
  "AZURE_CLIENT_ID": "your-azure-client-id-here", 
  "AZURE_CLIENT_SECRET": "your-azure-client-secret-here"
  
  // To obtain these values:
  // 1. Go to Azure Portal (https://portal.azure.com)
  // 2. Navigate to Azure Active Directory > App registrations
  // 3. Find your app or create a new one
  // 4. AZURE_TENANT_ID: Found in Overview page as "Directory (tenant) ID"
  // 5. AZURE_CLIENT_ID: Found in Overview page as "Application (client) ID"
  // 6. AZURE_CLIENT_SECRET: Go to Certificates & secrets > New client secret
}