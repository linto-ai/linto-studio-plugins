{
  "name": "live-transcription-open-source-toolbox",
  "version": "1.0.0",
  "description": "The Live Transcription Open Source Toolbox is a set of tools designed to operate and manage, at scale, transcription sessions from inbound audiovisual streams. Particularly in enterprises or structures managing multiple meeting rooms, whether physical or virtual.",
  "keywords": [
    "ASR",
    "STT",
    "Streaming",
    "SRT",
    "multilingual",
    "closed-captions",
    "transcription",
    "speech-to-text",
    "audio-processing",
    "real-time",
    "speech-recognition",
    "natural-language-processing",
    "machine-learning",
    "AI",
    "NLP",
    "audio-streaming",
    "open-source",
    "speech-analysis",
    "gstreamer",
    "ffmpeg",
    "aac",
    "opus",
    "mp3",
    "ogg"
  ],
  "main": "index.js",
  "scripts": {
    "start": "concurrently --raw \"npm run start:transcriber\" \"npm run start:session-api\" \"npm run start:scheduler\" \"npm run start:delivery\" \"npm run start:front-end\"",
    "start:session-api": "DEBUG=session-api:* ./node_modules/.bin/nodemon Session-API/Session-API.js",
    "start:transcriber": "DEBUG=transcriber:* ./node_modules/.bin/nodemon Transcriber/transcriber.js",
    "start:scheduler": "DEBUG=scheduler:* ./node_modules/.bin/nodemon Scheduler/scheduler.js",
    "start:delivery": "DEBUG=delivery:* ./node_modules/.bin/nodemon Delivery/delivery.js",
    "start:front-end": "cd front-end && npm start"
  },
  "author": "European Commission - DGSCIC",
